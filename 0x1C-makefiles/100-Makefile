CC = gcc
SRC = main.c holberton.c
OBJ = ${SRC:.c=.o}
NAME = holberton
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all
all: ${OBJ} m.h
	${CC} ${SRC} -o ${NAME}

.PHONY: clean
clean:
	${RM} *.swp *~ ${NAME}

.PHONY: oclean
oclean:
	${RM} ${OBJ}

.PHONY: fclean
fclean: clean oclean

.PHONY: re
re: fclean all
